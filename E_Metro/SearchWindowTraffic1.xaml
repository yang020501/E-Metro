<Window x:Class="E_Metro.SearchWindowTraffic1"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:E_Metro"
        mc:Ignorable="d"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        
        xmlns:uc="clr-namespace:E_Metro.UserControlKteam"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
     TextElement.FontWeight="Regular"
     TextElement.FontSize="13"
     TextOptions.TextFormattingMode="Ideal"
     TextOptions.TextRenderingMode="Auto"
     Background="{DynamicResource MaterialDesignPaper}"
     FontFamily="{DynamicResource MaterialDesignFont}"
        ResizeMode="NoResize"
        DataContext="{StaticResource SearchTraffic1VM}"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        
        Name="searchWindow"
        
        Title="SearchWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition></RowDefinition>

        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <uc:ControlBarUC Tag="{Binding Title, ElementName=mainWindow}" ></uc:ControlBarUC>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.RowDefinitions>
                <RowDefinition Height="auto"></RowDefinition>
                <RowDefinition></RowDefinition>

            </Grid.RowDefinitions>

            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition></ColumnDefinition>



                </Grid.ColumnDefinitions>

                <Grid Grid.Column="0">
                    <TextBox
                        materialDesign:HintAssist.Hint="TÊN CÔNG TY"
                        Text="{Binding SName}"
                        Margin="8 0 0 0">
                    </TextBox>
                </Grid>

                <Grid Grid.Column="1">
                    <TextBox
                        materialDesign:HintAssist.Hint="WEBSITE"
                        Text="{Binding SWeb}"
                        Margin="8 0 0 0">
                    </TextBox>
                </Grid>

                <Grid Grid.Column="2">
                    <TextBox
                        materialDesign:HintAssist.Hint="TRỤ SỞ"
                        Text="{Binding SAddress}"
                        Margin="8 0 0 0">
                    </TextBox>
                </Grid>

                <Grid Grid.Column="3">
                    <TextBox
                        materialDesign:HintAssist.Hint="SĐT"
                        Text="{Binding SPhone}"
                        Margin="8 0 0 0">
                    </TextBox>
                </Grid>

                <Grid Grid.Column="4">
                    <Button Command="{Binding EditCommand}">
                        <Grid>
                            <materialDesign:PackIcon Kind="Pencil" 
                                 HorizontalAlignment="Center" />
                        </Grid>
                    </Button>
                </Grid>

            </Grid>

            <Grid Grid.Row="1">
                
                <ListView
                    ItemsSource="{Binding myList1}"
                    SelectedItem="{Binding Selected}" Grid.ColumnSpan="2">
                    <ListView.View>
                        <GridView>

                            <GridViewColumn
                                Header="MÃ CÔNG TY"
                                DisplayMemberBinding="{Binding Id}">
                            </GridViewColumn>

                            <GridViewColumn
                                Header="TÊN CÔNG TY"
                                 DisplayMemberBinding="{Binding DisplayName}">
                            </GridViewColumn>

                            <GridViewColumn
                                Header="ĐC WEBSITE"
                                DisplayMemberBinding="{Binding Website}">
                            </GridViewColumn>

                            <GridViewColumn
                                Header="ĐC TRỤ SỞ CHÍNH"
                                DisplayMemberBinding="{Binding Address}">
                            </GridViewColumn>

                            <GridViewColumn
                                Header="SĐT"
                                DisplayMemberBinding="{Binding Phone}">
                            </GridViewColumn>

                        </GridView>
                    </ListView.View>
                </ListView>
            </Grid>

        </Grid>

    </Grid>
</Window>
