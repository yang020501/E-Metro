<Window x:Class="E_Metro.TrafficWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:E_Metro"
        mc:Ignorable="d"
        xmlns:uc="clr-namespace:E_Metro.UserControlKteam"
         xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        TextElement.Foreground="{DynamicResource MaterialDesignBody}"
     TextElement.FontWeight="Regular"
     TextElement.FontSize="13"
     TextOptions.TextFormattingMode="Ideal"
     TextOptions.TextRenderingMode="Auto"
     Background="{DynamicResource MaterialDesignPaper}"
     FontFamily="{DynamicResource MaterialDesignFont}"
        ResizeMode="NoResize"
        DataContext="{StaticResource TrafficVM}"
        WindowStyle="None"
        WindowStartupLocation="CenterScreen"
        Name="Traffic"
        Title="TrafficWindow" Height="450" Width="700">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="auto"></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0">
            <uc:ControlBarUC Tag="{Binding Title, ElementName=banVe}"></uc:ControlBarUC>
        </Grid>

        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition></ColumnDefinition>
                <ColumnDefinition></ColumnDefinition>
            </Grid.ColumnDefinitions>

            <materialDesign:Card Grid.Column="0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <TextBlock Text="CÔNG TI" FontSize="20" TextAlignment="Center">

                        </TextBlock>
                    </Grid>

                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <Button Click="Click_Add1" Grid.Column="0" Height="60" Width="160" Margin="10">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0">
                                    <TextBlock 
                                    Text="Thêm mới" 
                                    HorizontalAlignment="Center" >
                                    </TextBlock>
                                </Grid>
                                <Grid Grid.Row="1">
                                    <materialDesign:PackIcon Kind="Plus" 
                                 HorizontalAlignment="Center" />
                                </Grid>
                            </Grid>

                        </Button>

                        <Button Grid.Column="1" Click="Click_Search1" Height="60" Width="160" Margin="10">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0">
                                    <TextBlock 
                                    Text="Chỉnh sửa" 
                                    HorizontalAlignment="Center" >
                                    </TextBlock>
                                </Grid>
                                <Grid Grid.Row="1">
                                    <materialDesign:PackIcon Kind="Pencil" 
                                 HorizontalAlignment="Center" />
                                </Grid>
                            </Grid>

                        </Button>


                    </Grid>

                    <Grid Grid.Row="2">
                        <ListView ItemsSource="{Binding myList1}">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn
                                    DisplayMemberBinding="{Binding Id}"
                                    Header="MÃ">
                                    </GridViewColumn>

                                    <GridViewColumn
                                    DisplayMemberBinding="{Binding DisplayName}"
                                    Header="TÊN">
                                    </GridViewColumn>

                                    <GridViewColumn
                                    DisplayMemberBinding="{Binding Website}"
                                    Header="WEBSITE">
                                    </GridViewColumn>

                                    <GridViewColumn
                                    DisplayMemberBinding="{Binding Address}"
                                    Header="ĐỊA CHỈ">
                                    </GridViewColumn>

                                    <GridViewColumn
                                    DisplayMemberBinding="{Binding Phone}"
                                    Header="SĐT">
                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </Grid>
                </Grid>

            </materialDesign:Card>

            <materialDesign:Card Grid.Column="1">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition Height="auto"></RowDefinition>
                        <RowDefinition></RowDefinition>
                    </Grid.RowDefinitions>

                    <Grid Grid.Row="0">
                        <TextBlock Text="GA" FontSize="20" TextAlignment="Center">

                        </TextBlock>
                    </Grid>

                    <Grid Grid.Row="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition></ColumnDefinition>
                            <ColumnDefinition></ColumnDefinition>
                        </Grid.ColumnDefinitions>

                        <Button Click="Click_Add2" Grid.Column="0" Height="60" Width="160" Margin="10" >
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0">
                                    <TextBlock 
                                    Text="Thêm mới" 
                                    HorizontalAlignment="Center" >
                                    </TextBlock>
                                </Grid>
                                <Grid Grid.Row="1" HorizontalAlignment="Left" Margin="0,0.2,0,-0.2" Width="64">
                                    <materialDesign:PackIcon Kind="Plus" 
                                 HorizontalAlignment="Center" />
                                </Grid>
                            </Grid>

                        </Button>

                        <Button Grid.Column="1"  Height="60" Width="160" Margin="10" Click="Click_Search2">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition></RowDefinition>
                                    <RowDefinition></RowDefinition>
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0">
                                    <TextBlock 
                                    Text="Chỉnh sửa" 
                                    HorizontalAlignment="Center" >
                                    </TextBlock>
                                </Grid>
                                <Grid Grid.Row="1">
                                    <materialDesign:PackIcon Kind="Pencil" 
                                 HorizontalAlignment="Center" />
                                </Grid>
                            </Grid>

                        </Button>


                    </Grid>

                    <Grid Grid.Row="2">
                        <ListView ItemsSource="{Binding myList2}">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn
                                        DisplayMemberBinding="{Binding Id}"
                                    Header="MÃ">
                                    </GridViewColumn>

                                    <GridViewColumn
                                        DisplayMemberBinding="{Binding DisplayName}"
                                    Header="TÊN">
                                    </GridViewColumn>

                                    <GridViewColumn
                                        DisplayMemberBinding="{Binding Address}"
                                    Header="ĐỊA CHỈ">
                                    </GridViewColumn>

                                    <GridViewColumn
                                        DisplayMemberBinding="{Binding Status}"
                                    Header="TÌNH TRẠNG">
                                    </GridViewColumn>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </Grid>
                </Grid>

            </materialDesign:Card>

        </Grid>

    </Grid>
</Window>
